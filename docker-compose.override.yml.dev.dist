version: "3"

services:

    web:
        env_file: .env
        depends_on:
            - database
        ports:
            - "80:80"

    database:
        image: mysql:5.7
        volumes:
            - ./docker:/var/lib/mysql
        environment:
            MYSQL_ROOT_PASSWORD: root
            MYSQL_DATABASE: app_database

    phpmyadmin:
        image: phpmyadmin/phpmyadmin
        depends_on:
            - database
        ports:
            - "8080:80"
        environment:
            MYSQL_ROOT_PASSWORD: root
            PMA_HOST: database
